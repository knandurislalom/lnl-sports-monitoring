import React, { useState } from 'react';\nimport { BrowserRouter as Router, Routes, Route, Navigate } from 'react-router-dom';\nimport { ThemeProvider } from '@mui/material/styles';\nimport { CssBaseline, Box } from '@mui/material';\nimport { theme } from './theme';\nimport { Header } from './components/layout/Header';\nimport { LiveGamesDashboard } from './components/live/LiveGamesDashboard';\nimport { RecentGamesDashboard } from './components/recent/RecentGamesDashboard';\nimport { UpcomingScheduleDashboard } from './components/schedule/UpcomingScheduleDashboard';\nimport { PerformanceDashboard } from './components/performance/PerformanceMonitor';\nimport { usePerformanceMonitor } from './hooks/usePerformance';\nimport { PerformanceMonitorWrapper } from './components/performance/PerformanceMonitor';\n\n// ===== MAIN APP COMPONENT =====\n\nconst App: React.FC = () => {\n  const [showPerformanceMonitor, setShowPerformanceMonitor] = useState(\n    process.env.NODE_ENV === 'development'\n  );\n  const performanceMetrics = usePerformanceMonitor('App');\n\n  // Performance monitoring in development\n  if (process.env.NODE_ENV === 'development' && performanceMetrics.isSlowRender) {\n    console.warn(`App component slow render: ${performanceMetrics.lastRenderTime.toFixed(2)}ms`);\n  }\n\n  return (\n    <PerformanceMonitorWrapper componentName=\"App\">\n      <ThemeProvider theme={theme}>\n        <CssBaseline />\n        <Router>\n          <Box sx={{ display: 'flex', flexDirection: 'column', minHeight: '100vh' }}>\n            {/* Header Navigation */}\n            <Header />\n            \n            {/* Main Content */}\n            <Box component=\"main\" sx={{ flex: 1, bgcolor: 'background.default' }}>\n              <Routes>\n                <Route path=\"/\" element={<Navigate to=\"/live\" replace />} />\n                <Route path=\"/live\" element={<LiveGamesDashboard />} />\n                <Route path=\"/recent\" element={<RecentGamesDashboard />} />\n                <Route path=\"/schedule\" element={<UpcomingScheduleDashboard />} />\n              </Routes>\n            </Box>\n          </Box>\n          \n          {/* Performance Monitor Overlay */}\n          <PerformanceDashboard \n            show={showPerformanceMonitor} \n            onToggle={setShowPerformanceMonitor} \n          />\n        </Router>\n      </ThemeProvider>\n    </PerformanceMonitorWrapper>\n  );\n};\n\nexport default App;